<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="409dp"
            android:layout_height="62dp"
            android:text="@string/my_grocessery_watch"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/TitleHome" android:gravity="center"
            android:textSize="24sp" android:background="#C2D2F1"/>
    <Button
            android:text="@string/my_list"
            android:layout_width="124dp"
            android:layout_height="37dp"
            android:id="@+id/myListButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/myFavoritesButton"/>
    <Button
            android:text="@string/my_favorites"
            android:layout_width="124dp"
            android:layout_height="37dp"
            android:id="@+id/myFavoritesButton" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/TitleHome" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addButton" android:layout_marginEnd="162dp" android:layout_marginRight="162dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="162dp" android:layout_marginStart="162dp" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_ProductName"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_Date"
            android:autofillHints="" tools:targetApi="o" android:hint="@string/product_s_name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText_Date" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_Time"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" android:autofillHints="" tools:targetApi="o"
            android:hint="@string/date_to_alert"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/editText_Time" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/addButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="98dp" android:layout_marginStart="98dp" android:autofillHints=""
            android:hint="@string/time_for_alert"/>
    <Spinner
            android:layout_width="117dp"
            android:layout_height="23dp"
            android:id="@+id/spinner1" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/myListButton"
            android:layout_marginTop="8dp"/>
    <Spinner
            android:layout_width="145dp"
            android:layout_height="23dp"
            android:id="@+id/spinner2"
            app:layout_constraintEnd_toStartOf="@+id/spinner3"
            app:layout_constraintStart_toEndOf="@+id/spinner1"
            app:layout_constraintTop_toBottomOf="@+id/myListButton"
            android:layout_marginTop="8dp"/>
    <Spinner
            android:layout_width="117dp"
            android:layout_height="23dp"
            android:id="@+id/spinner3" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myListButton" android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/cant_find_write_here_for_yourself"
            android:layout_width="222dp"
            android:layout_height="28dp"
            android:id="@+id/textView" android:layout_marginEnd="94dp" android:layout_marginRight="94dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="95dp" android:layout_marginStart="95dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_ProductName"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/star_off"
            android:id="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/editText_ProductName"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            android:contentDescription="@string/favoritestarb"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/editText_ProductName"/>
    <Button
            android:layout_width="49dp"
            android:layout_height="50dp"
            android:id="@+id/favoriteB" app:layout_constraintEnd_toStartOf="@+id/editText_ProductName"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/editText_ProductName"
            android:background="@android:drawable/star_big_off"/>

</androidx.constraintlayout.widget.ConstraintLayout>